<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.HasGroupDao">

    <resultMap type="com.example.demo.entity.HasGroup" id="HasGroupMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="userId" column="USER_ID" jdbcType="INTEGER"/>
        <result property="groupId" column="GROUP_ID" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="HasGroupMap">
        select
          ID, USER_ID, GROUP_ID
        from drive.has_group
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="HasGroupMap">
        select
          ID, USER_ID, GROUP_ID
        from drive.has_group
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="HasGroupMap">
        select
          ID, USER_ID, GROUP_ID
        from drive.has_group
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="userId != null">
                and USER_ID = #{userId}
            </if>
            <if test="groupId != null">
                and GROUP_ID = #{groupId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into drive.has_group(GROUP_ID)
        values (#{groupId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update drive.has_group
        <set>
            <if test="groupId != null">
                GROUP_ID = #{groupId},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from drive.has_group where ID = #{id}
    </delete>

</mapper>